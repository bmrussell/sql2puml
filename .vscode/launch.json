    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Northwind",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\sql2puml.py",
            "console": "integratedTerminal",
            "args": [
                "--database",
                "Northwind",
                "--schema",
                "dbo",
                "--host",
                "localhost",
                "--port",
                "1433",
                "--out",
                "tests\\Northwind.puml",
                "--driver",
                "{ODBC Driver 17 for SQL Server}",
                "--user",
                "sa",
                "--password",
                "${env:NorthwindDbUser}"
            ],
        },
        {
            "name": "MI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\sql2puml.py",
            "console": "integratedTerminal",
            "args": [
                "--database",
                "${env:MIDbName}",
                "--schema",
                "dbo",
                "--host",
                "${env:MIDbServer}",
                "--port",
                "${env:MIDbPort}",
                "--out",
                "tests\\${env:MIDbName}.puml",
                "--driver",
                "{ODBC Driver 17 for SQL Server}",
                "--user",
                "${env:MIDBUser}",
                "--password",
                "${env:MIDbPassword}"
            ],
        },
        {
            "name": "Quote",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\sql2puml.py",
            "console": "integratedTerminal",
            "args": [
                "--database",
                "${env:QuoteDbName}",
                "--schema",
                "dbo",
                "--host",
                "${env:QuoteDbServer}",
                "--port",
                "${env:QuoteDbPort}",
                "--out",
                "tests\\${env:QuoteDbName}.puml",
                "--driver",
                "{ODBC Driver 17 for SQL Server}",
                "--user",
                "${env:QuoteDBUser}",
                "--password",
                "${env:QuoteDbPassword}"
            ],
        },
        {
            "name": "MySQL",
            "type": "python",
            "request": "launch",
            "program": "sql2puml.py",
            "console": "integratedTerminal",
            "args": [
                "--server",
                "mysql",
                "--database",
                "petshop",
                "--host",
                "localhost",
                "--port",
                "3306",
                "--out",
                "tests\\petshop.puml",
                "--user",
                "${env:MySQLDBUser}",
                "--password",
                "${env:MySQLDbPassword}"
            ],
